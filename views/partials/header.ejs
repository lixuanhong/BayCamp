<!DOCTYPE html>
<html lang="en">
    <head>
        <title>BayCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
     
     <nav class="navbar navbar-expand-md navbar-light bg-light mb-4">
      <a class="navbar-brand" href="/">BayCamp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
              <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                <a href="/campgrounds" class="nav-link">Home</a>
              </li>
        </ul>
        <ul class="navbar-nav">
            <% if(!currentUser){ %>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                    <a href="/login" class="nav-link">Login</a></li>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                    <a href="/register" class="nav-link">Sign Up</a></li>
            <% } else { %>
                <li class="nav-item"><a href="#" style="color:#618685">Signed In As&nbsp;<%= currentUser.username %></a></li>
                <li class="nav-item"><a href="/logout" style="color:#618685">&nbsp;Logout</a></li>
            <% } %>
        </ul>
      </div>
    </nav>

     <div class="container">
         <% if(error && error.length > 0){ %>
             <div class="alert alert-danger" role="alert">
                 <%= error %>
             </div>
         <% } %>
         <% if(success && success.length > 0){ %>
             <div class="alert alert-info" role="alert">
                 <%= success %>
             </div>
         <% } %>
     </div>
